<div class="container page-content category-content">
<div class="row">
	<div <% if logged_in? and current_user.admin? %>
		class="col-xs-6 col-xs-offset-1"
	<% elsif  logged_in? and !current_user.admin? %>
		class="col-xs-12" align="center"
	<% end %>
	>
		<h1>Session Categories</h1>
	</div>
	<% if logged_in? && current_user.admin %>
		<div class="col-xs-4 col-xs-inset-1" align="right" style="margin-top:25px;">
			<%= link_to 'Add New Category', new_category_path, class: "btn btn-default" %>
		</div>
	<% end %>
</div>
<hr /><br />
<% @categories.each do |category| %>

	<ul class="listing">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
				<li class="course-title">
					<%= link_to "#{category.name}", category_path(category) %>
				</li>
			</div>
		</div>
	</ul>
<% end %>
</div>