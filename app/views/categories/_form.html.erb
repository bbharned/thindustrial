<%= form_for(@category, :html => {class: 'form-horizontal', role: 'form' }) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2 col-sm-offset-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-4">
        <%= f.text_field :name, class: "form-control", placeholder: "Category Name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-6">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
   </div>
  
  
  <% end %>
	<br /> <br />
	<div class="col-xs-12" style="text-align:center;">
	 [ <%= link_to "Cancel and Return to All Categories", categories_path %> ]
	</div>