<div class="container page-content">
<h1 style="margin-bottom:3px;">Process Credit Card Payment</h1>
<p>Payment for <%= @user.firstname %> <%= @user.lastname %></p>
<br /><br />

<%= form_for ( :payment ) do |p| %>

        <div class="row col-sm-12">
            <div class="form-group col-md-5 no-left-padding">
            <%= p.label "Name on Card" %>
            <%= p.text_field :name, class: "form-control", required: true %>
            </div>
        </div>

        <div class="row col-sm-12">
            <div class="form-group col-md-5 no-left-padding">
            <%= p.label "Card Number" %>
            <%= p.text_field :card_number, class: "form-control", required: true %>
            </div>
        </div>

        <div class="row col-sm-12">
            <div class="form-group col-md-2">
                <%= p.label "CVC Code", style: "text-transform:uppercase;" %>
                <%= p.text_field :card_cvv, class: "form-control", required: true %>
            </div>
            <div class="form-group col-md-6">
                <div class="col-md-12">
                <%= p.label "Card Expires" %>
                </div>
                <div class="col-md-3">
                <%= p.select :card_expires_month, options_for_select(Payment.month_options),
                { include_blank: 'Month' },
                class: "form-control", required: true, style: "margin-bottom:5px;" %>
                </div>
                <div class="col-md-3">
                <%= p.select :card_expires_year, options_for_select(Payment.year_options.push),
                { include_blank: 'Year' },
                class: "form-control", required: true %>
                </div>

            </div>

        </div>

        <div class="row col-md-12">
            <div class="form-group col-md-2 left-padding">
                    <%= p.submit "submit", class: "btn btn-primary btn-lg"%>
            </div>
        </div>

<% end %>

</div>