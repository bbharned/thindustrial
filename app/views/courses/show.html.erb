<div class="container page-content">

<h2 align="center" class="course-title">
  <%= @course.title %>
</h2>

<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="description-header">Description:</h4>
  <hr />
  <%= simple_format (@course.description) %>
  <br />
  <% if logged_in? %>
    <div class="course-listing-actions" align="right">
        <%= link_to 'Select Course', schedules_path(:user_id => current_user.id, :course_id => @course.id, :timeblock => @course.timeblock),  method: :create, data: {confirm: "Are you sure you want to add this session to your schedule?"}, class: "btn btn-primary" %> <!-- Change path to add new entry to schedules db table--> 
      <% if current_user.admin? %>
        <%= link_to 'Edit', edit_course_path(@course), class: "btn btn-default" %> 
        <%= link_to 'Delete This Course', course_path(@course), method: :delete, 
                  data: {confirm: "Are you sure you want to delete the article?"}, 
                  class: "btn  btn-danger", style: "color:#FFFFFF;" %>
      <% end %>
    </div>
  <% end %>
  <hr />
  	<small>
  		Timeblock:
  		<%= @course.timeblock %>
	</small>
</div>  
<% if logged_in? %>
  <div class="article-action-links">
    <div class="container">
      <div class="col-xs-12">
        <%= link_to 'Back To All Courses', courses_path %>
      </div>
    </div>
  </div>
<% end %>

</div>