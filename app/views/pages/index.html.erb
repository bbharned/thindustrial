</div>



<script type="text/javascript">
(function() {
    
    $(".banner-dont-miss").delay(1500).animate({
        height: '65'
        }, 500, "swing", function() {
        	$('.banner-dont-miss p').fadeIn(100);
        	$('.banner-dont-miss p span').delay(600).animate({opacity: '1'}, 400, "swing");
        }).delay(2500).animate({height: '0'}, 400, "swing", function() {
        	$('.banner-dont-miss p').fadeOut(0);
        	$('.banner-dont-miss p span').animate({opacity: '0'}, 0, "swing");
        });;
    
})();
</script>